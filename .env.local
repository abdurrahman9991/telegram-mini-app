# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Telegram Bot Configuration
# Create a bot with @BotFather on Telegram and get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Monetag Ad Network Configuration
# Sign up at https://monetag.com and create an ad zone
# The zone ID from your Monetag script (e.g., 10042745)
NEXT_PUBLIC_MONETAG_ZONE_ID=10042745

# Points awarded for watching ads
NEXT_PUBLIC_POINTS_PER_AD_VIEW=10

# Referral bonus points
NEXT_PUBLIC_REFERRAL_BONUS_REFERRER=500
NEXT_PUBLIC_REFERRAL_BONUS_REFEREE=250

# Minimum points required for withdrawal/redemption
NEXT_PUBLIC_MIN_WITHDRAWAL_POINTS=1000

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback
